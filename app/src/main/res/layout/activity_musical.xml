<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:gravity="center"
    android:background="@color/colorPrimary"
    tools:context="in.mi.musical.MusicalActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="play1"
            android:layout_margin="3dp"
            android:background="@drawable/blue_gradient"
            android:id="@+id/play_sound1"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:onClick="play2"
            android:layout_margin="3dp"
            android:background="@drawable/blue_gradient"
            android:id="@+id/play_sound2"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:onClick="play3"
            android:layout_margin="3dp"
            android:background="@drawable/blue_gradient"
            android:id="@+id/play_sound3"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="play4"
            android:layout_margin="3dp"
            android:background="@drawable/purple_gradient"
            android:id="@+id/play_sound4"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:onClick="play5"
            android:layout_margin="3dp"
            android:background="@drawable/pink_gradient"
            android:id="@+id/play_sound5"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:onClick="play6"
            android:layout_margin="3dp"
            android:background="@drawable/orange_gradient"
            android:id="@+id/play_sound6"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:onClick="play7"
            android:layout_margin="3dp"
            android:background="@drawable/green_gradient"
            android:id="@+id/play_sound7"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:onClick="play8"
            android:layout_margin="3dp"
            android:background="@drawable/green_gradient"
            android:id="@+id/play_sound8"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:onClick="play9"
            android:layout_margin="3dp"
            android:background="@drawable/green_gradient"
            android:id="@+id/play_sound9"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>


</LinearLayout>
